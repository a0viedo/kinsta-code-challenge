datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     String  @id @default(uuid())
  name   String?
  token  String?
  movies Movie[]
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  trailerUrl  String
  releaseDate DateTime
  duration    Int
  coverUrl    String
  chronology  Int
  users       User[]
}